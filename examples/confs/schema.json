{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "seed_everything": {
      "type": "integer"
    },
    "subcommand": {
      "type": "string",
      "enum": ["fit", "validate", "test", "predict", "compute_statistics"]
    },
    "trainer": {
      "$ref": "#/definitions/trainer"
    },
    "data": {
      "$ref": "#/definitions/data"
    },
    "model": {
      "$ref": "#/definitions/model"
    },
    "optimizer": {
      "$ref": "#/definitions/optimizer"
    },
    "lr_scheduler": {
      "$ref": "#/definitions/lr_scheduler"
    }
  },
  "required": ["seed_everything", "data", "model"],
  "definitions": {
    "trainer": {
      "type": "object",
      "properties": {
        "accelerator": {
          "type": "string",
          "enum": ["auto", "None", "gpu", "tpu", "cuda", "cpu", "hpu", "mps", "xla"]
        },
        "strategy": {
          "type": "string",
          "enum": ["auto", "ddp", "ddp_spawn", "deepspeed", "hpu_parallel", "hpu_single", "single_device", "fsdp", "xla", "single_xla"]
        },
        "devices": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["auto"]
            },
            {
              "type": "integer",
              "minimum": -1
            }
          ]
        },
        "num_nodes": {
          "type": "integer",
          "minimum": 1
        },
        "precision": {
          "oneOf": [
            {
              "type": "integer",
              "enum": [64, 32, 16]
            },
            {
              "type": "string",
              "enum": ["64", "64-true", "32", "32-true", "16", "16-mixed", "bf16", "bf16-mixed"]
            }
          ]
        },
        "logger": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "#/definitions/logger"
            }
          ]
        },
        "callbacks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/callbackslist"
          }
        },
        "fast_dev_run": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "max_epochs": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["None"]
            },
            {
              "type": "integer",
              "minimum": -1
            }
          ]
        },
        "min_epochs": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["None"]
            },
            {
              "type": "integer",
              "minimum": 0
            }
          ]
        },
        "max_steps": {
          "type": "integer",
          "minimum": -1
        },
        "min_steps": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["None"]
            },
            {
              "type": "integer",
              "minimum": 0
            }
          ]
        },
        "max_time": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["None"]
            },
            {
              "type": "string",
              "format": "date-time"
            }
          ]
        },
        "limit_train_batches": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "limit_val_batches": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "limit_test_batches": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "limit_predict_batches": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "overfit_batches": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "val_check_interval": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "check_val_every_n_epoch": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["None"]
            },
            {
              "type": "integer",
              "minimum": 1
            }
          ]
        },
        "num_sanity_val_steps": {
          "type": "integer",
          "minimum": -1
        },
        "log_every_n_steps": {
          "type": "integer",
          "minimum": 50
        },
        "enable_checkpointing": {
          "type": "boolean"
        },
        "enable_progress_bar": {
          "type": "boolean"
        },
        "enable_model_summary": {
          "type": "boolean"
        },
        "accumulate_grad_batches": {
          "type": "integer",
          "minimum": 1
        },
        "gradient_clip_val": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["None"]
            },
            {
              "type": "number"
            }
          ]
        },
